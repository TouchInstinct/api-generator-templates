<h2 class="subtitle" id="{{ structure.name }}">{{ structure.name }}</h2>

<h3>Описание</h3>
<p class="sub-header">{{ structure.description }}</p>

<h3>Возможные значения</h3>
<div class="table table--small">
    <div class="part-table">
        <div class="row-header">
            <div>Значение</div>
            <div>Описание</div>
        </div>
        {% for value in structure.values %}
            <div class="row-body">
                <div>{{ value.value }}</div>
                <div>{{ value.description }}</div>
            </div>
        {% endfor %}
    </div>
</div>

{%- include 'comment.html.twig' with { comment: structure.comment } %}
